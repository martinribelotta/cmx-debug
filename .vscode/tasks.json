{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "all",
                "LDSCRIPTS=lib/stm32f1x.ld"
            ],
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "make run",
            "problemMatcher": "$gcc",
            "group": "build",
            "options": {"cwd": "${workspaceFolder}"}
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "make debug",
            "problemMatcher": "$gcc",
            "group": "build",
            "options": {"cwd": "${workspaceFolder}"}
        }
    ]
}
